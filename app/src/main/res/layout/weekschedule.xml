<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#6A4AA2"
        android:text="Day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:stretchColumns="1,2,3,4,5"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow android:background="#CCCCCC">

            <TextView
                android:padding="10dp"
                android:text="Time"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:text="Mon"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:text="Tue"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="12dp"
                android:text="Wed"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:text="Thurs"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="12dp"
                android:text="Friday"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="08:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="10:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="12:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="14:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="16:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="18:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="20:00" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />

            <TextView android:padding="20dp" />
        </TableRow>


    </TableLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="666dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="307dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="614dp"
        android:backgroundTint="#B08BF2"
        android:text="Week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>